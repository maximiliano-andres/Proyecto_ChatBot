<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tablas Profesionales</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
</head>

<body class="bg-light p-4">
    <div class="container">
        <h2 class="mb-4 text-primary">Contratos</h2>
        <table id="tablaContratos" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Código Verificador</th>
                    <th>Número Tarjeta</th>
                    <th>Fecha Expiración</th>
                    <th>CVV</th>
                    <th>Límite Crédito</th>
                    <th>Saldo Disponible</th>
                    <th>Estado</th>
                    <th>Fecha Emisión</th>
                </tr>
            </thead>
            <tbody>
                <!-- Datos dinámicos -->
            </tbody>
        </table>

        <h2 class="mb-4 text-success">Préstamos Personales</h2>
        <table id="tablaPrestamos" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Monto</th>
                    <th>Plazo (Meses)</th>
                    <th>Tasa de Interés</th>
                    <th>Estado</th>
                    <th>Fecha Solicitud</th>
                    <th>Fecha Aprobación</th>
                    <th>Fecha Vencimiento</th>
                </tr>
            </thead>
            <tbody>
                <!-- Datos dinámicos -->
            </tbody>
        </table>

        <h2 class="mb-4 text-warning">Seguros</h2>
        <table id="tablaSeguros" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Tipo Seguro</th>
                    <th>Monto Cobertura</th>
                    <th>Prima Mensual</th>
                    <th>Estado</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Vencimiento</th>
                </tr>
            </thead>
            <tbody>
                <!-- Datos dinámicos -->
            </tbody>
        </table>

        <h2 class="mb-4 text-danger">Tarjetas de Crédito</h2>
        <table id="tablaTarjetas" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Número Tarjeta</th>
                    <th>Fecha Expiración</th>
                    <th>CVV</th>
                    <th>Límite Crédito</th>
                    <th>Saldo Disponible</th>
                    <th>Estado</th>
                    <th>Fecha Emisión</th>
                </tr>
            </thead>
            <tbody>
                <!-- Datos dinámicos -->
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            $("#tablaContratos").DataTable();
            $("#tablaPrestamos").DataTable();
            $("#tablaSeguros").DataTable();
            $("#tablaTarjetas").DataTable();
        });
    </script>
</body>

</html>
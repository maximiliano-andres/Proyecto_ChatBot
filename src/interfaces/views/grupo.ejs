<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= titulo %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet" />

  <link rel="stylesheet" href="../../../css/grupo.css" />
</head>
<body>
  <div class="overlay text-center">
    <div class="container">
      <h2 class="section-title">Equipo de Trabajo - Universidad</h2><br><br>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-5">
        <% integrantes.forEach((persona) => { %>
          <div class="col">
            <div class="card card-integrante">
              <img src="<%= persona.foto || './images/perfil/perfil_default.webp' %>" class="avatar" alt="Foto de <%= persona.nombre %>">
              <div class="card-body">
                <h5 class="nombre"><%= persona.nombre %></h5>
                <p class="carrera"><%= persona.rol %></p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

      <div class="volver-inicio">
        <a href="/" class="btn-inicio">Volver al Inicio</a>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
